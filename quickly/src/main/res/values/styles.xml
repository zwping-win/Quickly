<resources>
    <!--@Deprecated 设置沉浸式状态栏，主工程的AppTheme记得parent继承成该style-->
    <style name="ImageTranslucentTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!--在Android 4.4之前的版本上运行，直接跟随系统主题-->
        <!--Android 5.x开始需要把颜色设置透明，否则导航栏会呈现系统默认的浅灰色-->
        <!--baseActivity封装，系统主体不固定，象这种情况最好是在baseActivity中做修改-->
    </style>

    <style name="comm_mm">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="comm_wm">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="comm_mw">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="comm_ww">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!--comm textView style-->
    <style name="comm_text_view" parent="comm_mm">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">3dp</item>
    </style>

    <style name="root_layout_style" parent="comm_mm" >
        <item name="android:background">@color/main_bg</item>
        <item name="android:orientation">vertical</item>
    </style>


</resources>
